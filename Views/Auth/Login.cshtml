
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    @Styles.Render("~/Content/style/LogInStyle.css")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script src="LogIn.js"></script>
    <title>LogIn</title>
</head>
<body>
    <div class="container-fluid bg-success">
        <div class="container ">
            <header>
                <div class="row p-2  align-items-center">
                    <div class="col-md-2 ">
                        <div class="row text-center">
                            <div class="col-md-12"><a href="/"><img src="" alt="logo"></a></div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="row align-items-center ">
                            <div class="col-md-10 offset-md-2">
                                <div class="links">
                                    <div class="banklink">
                                        <a href="https://ameriabank.am/">AMERIABANK</a>
                                    </div>
                                    <div class="img"><img src="~/Content/images/ameria-bank.png" alt="Ameria"></div>
                                </div>

                                <div class="links">
                                    <div class="banklink">
                                        <a href="https://www.acba.am/">ACBABANK</a>
                                    </div>
                                    <div class="img"><img src="~/Content/images/acba-bank.png" alt="ACBA"></div>
                                </div>

                                <div class="links">
                                    <div class="banklink">
                                        <a href="https://www.aeb.am/">AEB</a>
                                    </div>
                                    <div class="img"><img src="~/Content/images/aeb.svg" alt="Aeb"></div>
                                </div>
                                <div class="links">
                                    <div class="banklink">
                                        <a href="https://www.ardshinbank.am/">ARDSHINBANK</a>
                                    </div>
                                    <div class="img"><img src="~/Content/images/ardshin-bank.png" alt="Ardsh"></div>
                                </div>
                                <div class="links">
                                    <div class="banklink">
                                        <a href="https://www.inecobank.am/hy/Individual">INECOBANK</a>
                                    </div>
                                    <div class="img"><img src="~/Content/images/ineco-bank.svg" alt="Ineco"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="row language  justify-content-end">
                            <div class="col-md-10 ">
                                <div class="">
                                    <a href="">Հայ </a>
                                    <span>|</span>
                                    <a href="">Рус </a>
                                    <span>|</span>
                                    <a href="">Eng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        </div>
    </div>
    <div class="container-fluid colorback">
        <div class="container">
            <div class="row justify-content-center menu">
                <div class="col-md-9 offset-md-2">

                </div>
            </div>
        </div>
    </div>



    <div class="container-fluid ">
        <div class="mt-2 bg-light pt-3">
            <div class="row">
                <div class="col-md-6 offset-md-3 text-center">
                    <div class="row text-center ">
                        <div class="main">
                            <h1 class="mb-2">Login</h1>

                            <div id="message1">
                                <p>
                                    Please fill in all the fields.
                                </p>
                            </div>

                            <form method="post" class="form" id="form" onkeyup="validateEmail()">
                                <div>
                                    <div class="text_filed form-group">
                                        <input type="text" name="username" id="email" required>
                                        <span></span>
                                        <label>Your email</label>
                                    </div>
                                    <div>
                                        <span id="text1"></span>
                                    </div>
                                </div>
                                <div>
                                    <div class="text_filed ">
                                        <input type="password" name="password" id="psw" required>
                                        <span></span>
                                        <label>Password</label>
                                    </div>

                                    <div id="message2">
                                        <div id="letter" class="invalid">
                                            Contains letter
                                        </div>
                                        <div id="capital" class="invalid">
                                            Contains Uppercase
                                        </div>
                                        <div id="number" class="invalid">
                                            Contains Number
                                        </div>
                                        <div id="length" class="invalid">
                                            More than 6 or less than 20 characters
                                        </div>
                                    </div>
                                </div>
                                <div class="form-check check-text">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Remember me
                                    </label>
                                </div>
                                <label id="error-label"></label>
                                <input type="submit" value="Log in" id="login" onclick="validAll()" />
                                <div class="signup_link">
                                    Don't have an account? @Html.ActionLink("Sign Up", "SignUp", "Auth")  
                                </div>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/Scripts/javascript/LogIn.js")
</body>
</html>

